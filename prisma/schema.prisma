// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model Home {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  key    String    @unique
  shops    String[]
}

model Shop {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  shoppingList    String[]
  cart    String[]
}

model Item {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  quantity    Int
  price    Float
  category    String
}

model Category {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
}
